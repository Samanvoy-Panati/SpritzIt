<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.andrewgiang.textspritzer.app.MainActivity">

    <ProgressBar
        android:id="@+id/spritz_progress"
        android:layout_width="300dp"
        android:layout_height="1dp"
        style="?android:attr/progressBarStyleHorizontal" />

        <com.example.rsvp.SpritzerTextView
            android:id="@+id/spritzTV"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/spritz_progress"
            android:layout_below="@+id/spritz_progress"
            android:layout_marginTop="149dp"
            android:typeface="monospace"
            app:clickControls="true" />

</RelativeLayout>
